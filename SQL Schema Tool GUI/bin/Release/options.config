<?xml version="1.0" encoding="utf-8"?>
<options>
  <settings name="Settings">
    <panel name="General">
      <controls>
        <control name="SaveWindowsSettings" type="CheckBox" label="On Exit: Save app settings?" tooltip="Persist windows, dock and SQL settings.">CheckState: 1</control>
        <control name="ReOpenLast" type="CheckBox" label="On Start: Re-open Last?" tooltip="Re-opens all files that are open when exiting the app, at the next start of the app.">CheckState: 1</control>
      </controls>
    </panel>
    <panel name="SQL Schema">
      <controls>
        <control name="CompareTables" type="CheckBox" label="Include Tables?" tooltip="Select SQL Tables to include in the compare">CheckState: 1</control>
        <control name="CompareViews" type="CheckBox" label="Include Views?" tooltip="Select SQL Views to include in the compare">CheckState: 1</control>
        <control name="CompareSprocs" type="CheckBox" label="Include Sprocs?" tooltip="Select SQL Stored Procedures to include in the compare">CheckState: 1</control>
        <control name="CompareFuncs" type="CheckBox" label="Include Funcs?" tooltip="Select SQL Functions to include in the compare">CheckState: 1</control>
        <control name="CompareTriggers" type="CheckBox" label="Include Triggers?" tooltip="Select SQL Triggers to include in the compare">CheckState: 1</control>
        <control name="CompareRules" type="CheckBox" label="Include Rules?" tooltip="Select SQL Rules to include in the compare">CheckState: 1</control>
        <control name="CompareDefaults" type="CheckBox" label="Include Defaults?" tooltip="Select SQL Defaults to include in the compare">CheckState: 1</control>
        <control name="CompareUDDTs" type="CheckBox" label="Include UDDTs?" tooltip="Select SQL User Defined Data Types to include in the compare">CheckState: 1</control>
      </controls>
    </panel>
  </settings>
</options>